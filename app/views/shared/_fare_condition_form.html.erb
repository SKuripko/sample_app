<%= form_tag('/farecondition', method: :post, route: farecondition_path, onSubmit: 'saveFareConditionsSettings()') do |f| %>
  <div class="fare_conditions_fields">
    <div class="col-md-3">
      <label for="Select_API_URL">API</label>
      <%= select_tag(:api_url, options_from_collection_for_select(BaseUrl.all, :value, :name), style: "width: 300px") %>
    </div>
    <div class="form-group">
      <div class="col-md-4">
        <label for="validationDefault01" class="form-label">Reccomendation(Tid)</label>
        <input type="text" class="form-control form-control-sm" name="tid" id="tid" placeholder="TID" required>
      </div>
      <div class="col-md-4">
        <label for="validationDefault02" class="form-label">Authorization key</label>
        <input type="text" class="form-control form-control-sm" name="auth_key" id="auth_key" placeholder="Authorization key" required>
      </div>
    </div>
    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
  </div> 
<% end %>

