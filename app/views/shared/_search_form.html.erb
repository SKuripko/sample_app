            <option value="w">W - Econom-premium</option>
            <option value="b">B - Business</option>
            <option value="f">F - First</option>
    		  </select>
  	  </div>

		  <div class="form-check">
        <label class="form-check-label" for="defaultCheck1">Только прямые</label>
  	    <input class="form-check-input" name="is_direct_only" type="checkbox" value="" id="defaultCheck1">
      </div>
    </div>  

	<%= submit_tag "Search", class: "btn btn-large btn-primary" %>
