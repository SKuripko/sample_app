<%= form_tag('/search', method: :post, route: search_path, onSubmit: 'saveSearchSettings()') do |f| %>
	<%= render 'shared/error_messages' %>

    <div class="segments_fields">
      <div class="col">
        <label for="Select_API_URL">API</label>
        <%= select_tag(:api_url,options_from_collection_for_select(BaseUrl.all, :value, :name)) %>
      </div>      
      <div class="form-group row segment">
        <div class="col-md-4">
         	<label for="validationDeparture">Departure</label>
         	<input type="text" name="segments[0][from]" id="from_0" class="from form-control" placeholder="Deparute iata" value="" required>
        </div>
        <div class="col-md-4">
        	<label for="validationArrival">Arrival</label>
      		<input type="text" name="segments[0][to]" id="to_0" class="to form-control" placeholder="Arrival iata" value="" required>
        </div>
        <div class="col-md-4">
        	<label for="date">Date</label>
          <input type="text" name="segments[0][date]" id="date_0" class="date form-control" data-provide='datepicker' data-date-format="dd-mm-yyyy">
        </div>    		  
    	</div>
     

      <div class="сheckbox">
        <input id="agree" type="checkbox" name="agree" value="agree">
        <label for="agree">Обратно</label>
      </div>
  
     	<div class="form-group row segment">
     	  <div class="col-md-4 from[1]">
         	<label for="validationDeparture1">Departure</label>
         	<input type="text" name="segments[1][from]" id="from_1" class="from form-control" placeholder="Deparute iata" required>
     	  </div>
     	  <div class="col-md-4 to[1]">
         	<label for="validationArrival1">Arrival</label>
         	<input type="text" name="segments[1][to]" id="to_1" class="to form-control" placeholder="Arrival iata" required>
     	  </div>
     	  <div class="col-md-4 date[1]">
         	<label for="date">Date</label>
         	<input type="text" name="segments[1][date]" id="date_1" class="date form-control" data-provide="datepicker" data-date-format="dd-mm-yyyy">  
     	  </div>            
     	</div>
    </div>  

    <button class="btn btn-primary btn-xs AddSegments" type="button">Add Segments</button>      			

		<div class="form-group row">
		  <div class="col-md-4">
 		  	<label for="validationAdultCount">Adult</label>
 		  	<input type="text" name="adult" id="adult" class="form-control" placeholder="" required>
 		  </div>
		  <div class="col-md-4">
		  	<label for="inputChildCount">Child</label>
   			<input type="text" name="child" id="child" class="form-control">
 		  </div>
 		  <div class="col-md-4">
		  	<label for="inputInfantcount">Infant</label>
 		  	<input type="text" name="infant" id="infant" class="form-control">
 		  </div>    		  
  	</div>

		<div class="form-group row">
 		  <div class="col-md-4">
		  	<label for="inputFilterAirlines">Filter airlines</label>
 		  	<input type="text" name="includeairlines" id="include_airlines" class="form-control">
 		  </div>
 		  <div class="col-md-4">
      	<label for="inputIncludeGds">Include gds</label>
    		<input type="text" name="includegds" id="include_gds" class="form-control">
      </div>
      <div class="col-md-4">
       	<label for="inputExcludeGds">Exclude gds</label>
 		  	<input type="text" name="excludegds" id="exclude_gds" class="form-control">
 		  </div>    		 	
      <div class="col-md-4">
	  	  <label for="valildationAuthKey">Authorization key</label>
	  	  <input type="text" name="auth_key" id="auth_key" class="form-control" required>
      </div>  
  	  <div class="col-md-4">
			  <label for="inputServiceclass">Service class</label>
          <select class="form-control form-control-sm" name="bookingclass" id="SelectBookingClass">
            <option value="e">E - Econom</option>
            <option value="w">W - Econom-premium</option>
            <option value="b">B - Business</option>
            <option value="f">F - First</option>
    		  </select>
  	  </div>
      <div class="сheckbox col-md-6">
        <label>
          <input type="checkbox" class="direct_only" name="is_direct_only">Только прямые</label>
      </div>
    </div>
  <button type="submit" class="btn btn-primary">Submit</button>      
<% end %>