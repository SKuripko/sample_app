<%= form_tag('/search', method: :post, route: search_path) do |f| %>
	<%= render 'shared/error_messages' %>

    <div class="segments_fields">
      <div class="form-group row segment">
        <div class="col-md-4">
         	<label for="validationDeparture">Departure</label>
         	<input type="text" name="segments[0][from]" class="form-control" placeholder="Deparute iata" value="MOW" required>
        </div>
        <div class="col-md-4">
        	<label for="validationArrival">Arrival</label>
      		<input type="text" name="segments[0][to]" class="form-control" placeholder="Arrival iata" value="SIP" required>
        </div>
        <div class="col-md-4 input-prepend">
        	<label for="date">Date</label>
          <input type="text" name="segments[0][date]" class="form-control" data-provide='datepicker' data-date-format="dd-mm-yyyy">
        </div>    		  
    	</div>
     

      <div class="сheckbox">
        <label>
          <input type="checkbox" class="agree">Обратно</label>
      </div>
  
     	<div class="form-group row segment">
     	  <div class="col-md-4">
         	<label for="validationDeparture1">Departure</label>
         	<input type="text" name="segments[1][from]" class="form-control" placeholder="Deparute iata" required>
     	  </div>
     	  <div class="col-md-4">
         	<label for="validationArrival1">Arrival</label>
         	<input type="text" name="segments[1][to]" class="form-control" placeholder="Arrival iata" required>
     	  </div>
     	  <div class="col-md-4">
         	<label for="date">Date</label>
         	<input type="text" name="segments[1][date]" class="form-control" data-provide="datepicker" data-date-format="dd-mm-yyyy">  
     	  </div>            
     	</div>
    </div>  

    <button class="btn btn-primary btn-xs AddSegments" type="button">Add Segments</button>      			

		<div class="form-group row">
		  <div class="col-md-4">
 		  	<label for="validationAdultCount">Adult</label>
 		  	<input type="text" name="adult" class="form-control" placeholder="" required>
 		  </div>
		  <div class="col-md-4">
		  	<label for="inputChildCount">Child</label>
   			<input type="text" name="child" class="form-control">
 		  </div>
 		  <div class="col-md-4">
		  	<label for="inputInfantcount">Infant</label>
 		  	<input type="text" name="infant" class="form-control">
 		  </div>    		  
  	</div>

		<div class="form-group row">
 		  <div class="col-md-4">
		  	<label for="inputFilterAirlines">Filter airlines</label>
 		  	<input type="text" name="includeairlines" class="form-control">
 		  </div>
 		  <div class="col-md-4">
      	<label for="inputIncludeGds">Include gds</label>
    		<input type="text" name="includegds" class="form-control">
      </div>
      <div class="col-md-4">
       	<label for="inputExcludeGds">Exclude gds</label>
 		  	<input type="text" name="excludegds" class="form-control">
 		  </div>    		 	
      <div class="col-md-4">
	  	  <label for="valildationAuthKey">Authorization key</label>
	  	  <input type="text" name="auth_key" class="form-control" required>
      </div>  
  	  <div class="col-md-4">
			  <label for="inputServiceclass">Service class</label>
          <select class="form-control form-control-sm" name="bookingclass" id="SelectBookingClass">
            <option value="e">E - Econom</option>
            <option value="w">W - Econom-premium</option>
            <option value="b">B - Business</option>
            <option value="f">F - First</option>
    		  </select>
  	  </div>
      <div class="сheckbox col-md-6">
        <label>
          <input type="checkbox" class="direct_only" name="is_direct_only">Только прямые</label>
      </div>
    </div>
  <%= submit_tag "Search", class: "btn btn-large btn-primary" %>      
<% end %>




		

