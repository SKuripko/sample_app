<%= form_tag('/farefamily', method: :post, route: farefamily_path, onSubmit: 'saveFareFamilySettings()') do |f| %>
  <div class="fare_family_fields">
    <div class="form-group row fare_family">
      <div class="col">
        <label for="Select_API_URL">API</label>
        <%= select_tag(:api_url,options_from_collection_for_select(BaseUrl.all, :value, :name)) %>
      </div>
      <div class="col">
        <label for="validationDefault01" class="form-label">Reccomendation(Tid)</label>
        <input type="text" class="form-control" name="tid" id="tid" placeholder="TID" required>
      </div>
      <div class="col">
        <label for="validationDefault02" class="form-label">Authorization key</label>
        <input type="text" class="form-control" name="auth_key" id="auth_key" placeholder="Authorization key" required>
      </div>          
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>  
<% end %>

